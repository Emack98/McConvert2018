<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="McConvert.Temperature">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Default">
            
            <!-- Button and label settings for layout of the calculations -->

            <Entry x:Name="Temp" Keyboard="Numeric" Placeholder="Temperature in Celcius" TextColor="Red" />

            <Button Text="Convert to Fahrenheit" Clicked="Button_Clicked" TextColor="Blue"/>

            <Label x:Name="FahrOut" Text="Fahrenheit to Celius is: " HorizontalOptions = "Center" TextColor="Red"/>


            <Entry x:Name="Temp2" Keyboard="Numeric" Placeholder="Temperature in Fahrenheit" TextColor="Red" />

            <Button Text="Convert to Celcius" Clicked="ButtonClicked" TextColor="Blue"/>

            <Label x:Name="CelcOut" Text="Celcius to Fahrenheit is: " HorizontalOptions = "Center" TextColor="Red"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>